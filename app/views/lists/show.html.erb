<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "Mes listes", lists_path, class:"btn btn-secondary" %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to "Ajouter une liste", new_list_path, class:"btn btn-secondary" %>
          </li>
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <h4><%= @list.name %></h4>
  <ul>
    <% @bookmarks.each do |bookmark|%>
      <li><h5><%= bookmark.movie.title %></h5></li>
    <%= link_to "supprimer de la liste", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Etes-vous sur?"} %>
    <% end %>
  </ul>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment %>
    <%= f.submit %>
  <% end %>

  <%= link_to "Retour aux listes", lists_path %>
</div>
